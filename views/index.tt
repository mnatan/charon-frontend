<div id="page">
      <div id="sidebar">
        <ul id="sidebar-items">
          <li>
            <% IF session.logged_in %>
                <h3>Zalogowany jako <% session.user %></h3>
                <ul class="links">
                  <li><a href="/logout">Wyloguj</a></li>
                </ul>
            <% ELSE %>
                <h3>Logowanie</h3>
                <% INCLUDE login.tt %>
                <br>
                <a href="/register">Rejestracja</a>
            <% END %>
          </li>

        </ul>

      </div>

      <div id="content">
        <div id="header">
          <h1>Charon</h1>
          <h2>System rejestracji na studia podyplomowe</h2>
        </div>

        <div id="getting-started">
          <h1>Aktualna oferta studi√≥w</h1>
          <h2>Otwarte rejestracje:</h2>

          <ol>
          <% FOREACH field IN fields %>
            <li>
                <h2><% field.name %></h2>
                <p><% field.description %></p>
                <p>Zarejestrowano <% field.registered %>/<% field.place_limit %><p>

                <% IF session.logged_in %>
                <form name="field_register"
                    action="field_register/<% field.fieldid %>"
                    method="post"
                    accept-charset="utf-8">  
                    <input type="submit" value="Register"
                    <% IF not field.registration_possible %>
                    disabled="true"
                    <% END %>
                    >
                </form>  
                <% END %>
            </li>
          <% END %>
          </ol>
        </div>
      </div>
    </div>
