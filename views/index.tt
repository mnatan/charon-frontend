<!DOCTYPE html>
<section id="rejestracje">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Aktywne rejestracje</h3>
		</div>
		[% IF registrations %]
		<div class="panel-body">
			[% FOREACH registration in registrations %]

			<div class="panel panel-info">
				<div class="panel-heading">
					<h3 class="panel-title" style="display:inline-block">
                        <a href="/registration_info/[% registration.fieldid %]">[% registration.name %]</a></h3>
                        
                        <a href="/registration_info/[% registration.fieldid %]" class="img-link">
                            <img src="/images/button-info.png" align="right"
                            alt="Informacja" class="img-control"></a>
				</div>

				<div class="panel-body">
					Data zakończenia rejestracji: [% registration.end_date %]<br>
					Limit miejsc: [% registration.limit %]
                    [% IF session.role == 'student' %]
                        <form action = "register_on_field" method = "POST">
                            <input type="hidden" name="return_url" value="[% request.path %]">
                            <input type="hidden" name="fieldid" value="[% registration.fieldid %]">
                            <button type="submit" class="btn btn-primary">Zarejestruj mnie</button>
                        </form>
                    [% END %]
				</div>
			</div>

			[% END %]
		</div>
		[% ELSE %]
		<div class="panel-body">
			Obecnie nie ma żadnych aktywnych rejestracji.
		</div>
		[% END %]					
	</div>
</section>
